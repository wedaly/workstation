[user]
    name = {{ .gitconfig.name }}
    email = {{ .gitconfig.email }}
    {{ if .gitconfig.signingKey }}signingkey = {{ .gitconfig.signingKey }}{{ end }}
[core]
    excludesfile = ~/.gitignore
[pull]
    ff = only
[push]
    autoSetupRemote = true
{{ if .gitconfig.signingKey }}
[gpg]
    format = ssh
[gpg.ssh]
    allowedSignersFile = "~/.config/git_allowed_signers"
[commit]
    gpgsign = true
[tag]
    gpgsign = true
    forceSignAnnotated = true
{{ end }}
[init]
    defaultBranch = main
[diff]
    algorithm = histogram
[merge]
    conflictstyle = diff3
[fetch]
    prune = true
{{ if .gitconfig.useWindowsGitCredentialManager }}
[credential]
    helper = /mnt/c/Program\\ Files/Git/mingw64/bin/git-credential-manager.exe
[credential "https://dev.azure.com"]
    useHttpPath = true
{{ end }}
